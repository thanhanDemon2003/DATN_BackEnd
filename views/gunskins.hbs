<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/all.min.css" />
    <link rel="stylesheet" href="/stylesheets/framework.css" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;500&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" href="/images/dot.png" />
    <title>Skin Súng</title>
  </head>

  <body>
    <div class="page d-flex">
      <div class="sidebar bg-white p-20 p-relative">
        <a href="/"><img
            class="p-relative txt-c mt-0 logo"
            src="/images/dot.png"
            alt="Logo"
          /></a>
        <ul>
          <li>
            <a class="d-flex align-c fs-14 c-black rad-6 p-10" href="/">
              <i class="fa-solid fa-house fa-fw"></i>
              <span class="hide-mobile">Trang chủ</span>
            </a>
          </li>
          <li>
            <p class="d-flex align-c fs-14 c-grey rad-6">
              <span class="hide-mobile">Game</span>
            </p>
          </li>
          <li>
            <a class="d-flex align-c fs-14 c-black rad-6 p-10" href="/players">
              <i class="fa-solid fa-user fa-fw"></i>
              <span class="hide-mobile">Người chơi</span>
            </a>
          </li>
          <li>
            <a
              class="active d-flex align-c fs-14 c-black rad-6 p-10"
              href="/gunskins"
            >
              <i class="fas fa-fire-extinguisher fa-fw"></i>
              <span class="hide-mobile">Trang phục súng</span>
            </a>
          </li>
          <li>
            <a
              class="d-flex align-c fs-14 c-black rad-6 p-10"
              href="/transactions"
            >
              <i class="fa-solid fa-diagram-project fa-fw"></i>
              <span class="hide-mobile">Lịch sử mua skin</span>
            </a>
          </li>
          <li>
            <a class="d-flex align-c fs-14 c-black rad-6 p-10" href="payments">
              <i class="fa-solid fa-file-invoice-dollar fa-fw"></i>
              <span class="hide-mobile">Lịch sử thanh toán</span>
            </a>
          </li>
          <li>
            <a class="d-flex align-c fs-14 c-black rad-6 p-10" href="/donates">
              <i class="fa-regular fa-credit-card fa-fw"></i>
              <span class="hide-mobile">Tiền được ủng hộ</span>
            </a>
          </li>
          <li>
            <p class="d-flex align-c fs-14 c-grey rad-6">
              <span class="hide-mobile">Admin</span>
            </p>
          </li>
          <li>
            <a class="d-flex align-c fs-14 c-black rad-6 p-10" href="/users">
              <i class="fa-solid fa-user-gear fa-fw"></i>
              <span class="hide-mobile">Users cPanel</span>
            </a>
          </li>
        </ul>
      </div>
      <div class="content w-full overflow-h">
        <!-- Start Header -->
        <div class="header bg-white p-15 between-flex">
          <div class="p-relative">
            <h2 class="p-10 rad-10">cPanel Dark Disquite</h2>
          </div>
          <div class="icons d-flex align-c">
            <span class="notification p-relative">
              <i class="fa-regular fa-bell fa-lg"></i>
            </span>
            <img src="images/header.png" alt="AbdulJaleel" id="avatar" />
            <div class="user-info" id="user-info">
              <button
                class="btn-shape c-white bg-333"
                type="btn-ChangePassword"
                onclick="clickOpenChangePass()"
              >Đổi mật khẩu</button>
              <button
                class="btn-shape c-white bg-333"
                type="button"
                id="logout-button"
              >Đăng xuất</button>
            </div>
          </div>
        </div>
        <script>

          const avatar = document.getElementById('avatar'); const userInfo =
          document.getElementById('user-info'); const logoutButton =
          document.getElementById('logout-button'); let isShown = false;
          avatar.addEventListener('click', () => { isShown = !isShown; if
          (isShown) { userInfo.style.display = 'block'; } else {
          userInfo.style.display = 'none'; } });
          logoutButton.addEventListener('click', () => { window.location.href =
          '/login'; localStorage.clear();}); // Xử lý click nút đăng xuất

        </script>
        <!-- End Header -->
        <!-- Start Settings -->
        <div class="settings p-20">
          <h1 class="main-heading mt-0">Trang phục súng</h1>
          <span
            class="one btn-shape rad-6 c-white bg-blue pointer"
            onclick="addGunSkin()"
          >Thêm Skin Súng</span>
          <span
            class="one btn-shape rad-6 c-white bg-333 pointer"
            onclick="handleSaleSkins()"
          >Giảm giá</span>

          <div class="project-table">
            <div class="project-table p-20 bg-white rad-10 mt-20">
              <table class="w-full">
                <thead>
                  <tr class="table-heading bg-eee fw-bold">
                    <td>Tên trang phục súng</td>
                    <td>Color</td>
                    <td>Giá tiền</td>
                    <td>Đang giảm giá (%)</td>
                    <td>Loại</td>
                    <td>Trạng thái</td>
                    <td>Chọn</td>
                  </tr>
                </thead>
                <script src="/javascripts/gunskins.js"></script>
                <tbody>
                  <tr>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>

        </div>

      </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- End Settings -->
    <div id="dialog" class="dialog">
      <div class="dialog-content">
        <span class="close" onclick="closeDialog()">
          <i class="fa-sharp fa-solid fa-xmark fa-xl"></i>
        </span>
        <span class="btn-shape c-white bg-orange w-git fs-25">(%) Giảm Giá Skin</span>
        <div class="box-dialog-chil">
          <div class="dialog-content1">
            <input class="mt-20" type="number" id="ipParent" />
          </div>
        </div>
        <button
          class="btn-shape c-white bg-blue width-fit left-flex mt-10"
          id="saleSkin"
        >Giảm giá</button>
      </div>
    </div>
    <div id="dialogAdd" class="dialogAdd">
      <div class="dialog-content h-100">
        <span class="close" onclick="closeDialogAdd()">
          <i class="fa-sharp fa-solid fa-xmark fa-xl"></i>
        </span>
        <span
          class="btn-shape c-white bg-green w-git fs-25"
          id="labelGun"
        ></span>
        <div class="box-dialog-chil">
          <span class="form-group">
            <p class="mt-20">Tên Skin</p>
            <input class="inputAddSkin" type="text" id="nameSkin" />
          </span>
          <span class="form-group">
            <p class="mt-20">Màu Skin</p>
            <input class="inputAddSkin" type="text" id="colorSkin" />
          </span>
          <span class="form-group">
            <p class="mt-20">Giá Skin</p>
            <input class="inputAddSkin" type="number" id="priceSkin" />
          </span>
          <span class="form-group">
            <p class="mt-20" for="categogy">Loại:</p>
            <select class="width-fit h-fit" id="categorySkin">
              <option>Secondary</option>
              <option>Primary</option>
            </select>
          </span>
        </div>
        <button
          class="btn-shape c-white bg-blue fs-18 width-fit left-flex mt-30"
          id="btnAddSkin"
        ></button>
      </div>
    </div>
    <script src="/javascripts/changePass.js"></script>
    <div id="dialogChangePass" class="dialogChangePass">
      <div class="dialog-contentChangePass">
        <span class="close" onclick="closeDialogChangePass()">
          <i class="fa-sharp fa-solid fa-xmark fa-xl"></i>
        </span>
        <span class="fs-25">Đổi mật khẩu nè!</span>
        <div class="mt-30">
          <span class="fs-15 mr-25">Mật khẩu cũ: </span>
          <input class="inputAddSkin ml-5" type="password" id="ipOldPass" />
        </div>
        <div>
          <span class="fs-15 mr-25">Mật khẩu mới: </span>
          <input class="inputAddSkin" type="password" id="ipNewPass" />
        </div>
        <div>
          <span class="fs-15 mr-10">Xác nhận khẩu mới: </span>
          <input class="inputAddSkin" type="password" id="ipReNewPass" />
        </div>
        <p
          style="text-align: center; font-size:medium; margin-left: 40px; color:red"
          id="errValue"
        ></p>
        <button
          class="btn-shape c-white bg-blue width-fit left-flex mt-10"
          onclick="changePassword()"
        >Đổi mật khẩu</button>
      </div>
    </div>
  </body>

</html>